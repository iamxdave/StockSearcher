<CascadingAuthenticationState>
    <LoadingScreen>
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <Authorizing>
                        <div class="container">
                            <div class="loader">Page is <span style="color:#bc4749">AUTHORIZING</span>... Please wait.</div>
                        </div>
                    </Authorizing>
                    <NotAuthorized>
                        @if (context.User.Identity?.IsAuthenticated != true)
                        {
                            <RedirectToLogin />
                        }
                        else
                        {
                            <div class="container">
                                <div class="loader">You are not <span style="color:#bc4749">AUTHORIZED</span> to view this resource</div>
                            </div>
                        }
                    </NotAuthorized>
                </AuthorizeRouteView>
                <FocusOnNavigate RouteData="@routeData" Selector="h1" />
            </Found>
            <NotFound>
                <PageTitle>Not found</PageTitle>
                <LayoutView Layout="@typeof(MainLayout)">
                    <div class="container">
                        <div class="loader" style="color: #386641">There is nothing on this address</div>
                    </div>
                </LayoutView>
            </NotFound>
        </Router>
    </LoadingScreen>
</CascadingAuthenticationState>

<style>
    .container {
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        font-size: 2rem;
    }
    .loader {
        font-size: 4rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }
</style>